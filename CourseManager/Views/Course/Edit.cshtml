@model Course

@{
    ViewData["Title"] = "Edit a course";
}

<div>
    <form asp-controller="Course" asp-action="ProcessEditRequest" method="post" enctype="application/x-www-form-urlencoded">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-control">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Instructor" class="form-control">Instructor</label>
            <input type="text" asp-for="Instructor" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="StartDate" class="form-control">Start Date</label>
            <input type="datetime" asp-for="StartDate" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="RoomNumber" class="form-control">Room Number</label>
            <input type="text" asp-for="RoomNumber" class="form-control" />
        </div>

        <input type="hidden" asp-for="CourseId"/>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Course" asp-action="GetAllCourses" class="btn btn-primary">Cancel</a>
        </div>

    </form>
</div>